{
	"name": "wikimedia/wait-condition-loop",
	"description": "Wait loop that reaches a condition or times out",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/WaitConditionLoop",
	"authors": [
		{
			"name": "Aaron Schulz",
			"email": "aschulz@wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\WaitConditionLoop\\Test\\": "tests/"
		}
	},
	"require": {
		"php": ">=7.4.3"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "39.0.0",
		"mediawiki/mediawiki-phan-config": "0.12.0",
		"mediawiki/minus-x": "1.1.1",
		"ockcyp/covers-validator": "1.4.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"phpunit/phpunit": "^8.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"@phan",
			"minus-x check ."
		],
		"phan": "phan --allow-polyfill-parser",
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phpcs": "phpcs -sp"
	}
}
